out_to_x no
own_window no
out_to_console yes
background no
max_text_width 0

# Update interval in seconds
update_interval 2.0

# This is the number of times Conky will update before quitting.
# Set to zero to run forever.
total_run_times 0

# Shortens units to a single character (kiB->k, GiB->G, etc.). Default is off.
short_units yes

# How strict should if_up be when testing an interface for being up?
# The value is one of up, link or address, to check for the interface
# being solely up, being up and having link or being up, having link
# and an assigned IP address. 
if_up_strictness address

# Add spaces to keep things from moving about?  This only affects certain objects.
# use_spacer should have an argument of left, right, or none
use_spacer left

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale no

# number of cpu samples to average
# set to 1 to disable averaging
cpu_avg_samples 2



# Stuff after 'TEXT' will be formatted on screen
TEXT

# JSON for i3bar

 [{ "full_text" : "${exec cat /home/derrick/.scoreboard_files/nba_scoreboard}", "color" : "\#ffffef"},
  { "full_text" : "${exec cat /home/derrick/.scoreboard_files/mlb_scoreboard}", "color" : "\#ffffef"},
	{ "full_text" : "${if_mpd_playing} ${mpd_smart} ${endif}", "color" : "\#ffffef"},
	{ "full_text" : "${if_up wlp2s0}wlp2s0 ${addr wlp2s0}${endif}"},
  { "full_text" : "RAM ${memperc}%" , "color" :
    ${if_match ${memperc}<90}"\#ffffef"${else}"\#dca3a3"${endif} },
	{ "full_text" : "CPU1 ${cpu cpu1}% ${exec sensors | grep -m 1 "Core 0"|awk '{print $3}'}C"},
	{ "full_text" : "CPU2 ${cpu cpu2}% ${exec sensors | grep -m 1 "Core 1"|awk '{print $3}'}C"},
	{ "full_text" : "BAT ${battery_percent}%" , "color" :
	  ${if_match ${battery_percent}>15}${if_match ${battery_percent}>70}"\#7f9f7f"${else}"\#f0dfaf"${endif}${else}"\#dca3a3"${endif}},
	{ "full_text" : "${time %a %m.%d.%y} ${time %l:%M%P}"}],
